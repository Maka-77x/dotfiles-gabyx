# An example configuration for vdirsyncer.
#
# Move it to ~/.vdirsyncer/config or ~/.config/vdirsyncer/config and edit it.
# Run `vdirsyncer --help` for CLI usage.
#
# Optional parameters are commented out.
# This file doesn't document all available parameters, see
# http://vdirsyncer.pimutils.org/ for the rest of them.

[general]
# A folder where vdirsyncer can store some metadata about each pair.
status_path = "~/.local/vdirsyncer/status"

[pair khal_default]
a = "khal_default_local"
b = "khal_default_remote"
collections = ["from a", "from b"]
# This is important because we do not want to
# sync back any change to the server.
conflict_resolution = "b wins"

[storage khal_default_local]
type = "filesystem"
path = "/home/nixos/.local/share/khal/calendars"
fileext = ".ics"
read_only = true

[storage khal_default_remote]
type = "google_calendar"
token_file = "~/.local/share/vdirsyncer/khal_default_remote"
client_id.fetch = ["command", "cat", "~/.config/vdirsyncer/google-calendar-client-id"]
client_secret.fetch = ["command", "cat", "~/.config/vdirsyncer/google-calendar-client-secret"]
