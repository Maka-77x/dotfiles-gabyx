## {{- $choices := list "private" "work" -}}
## {{- $workspace:= promptChoiceOnce "Workspace?" $choices "private" -}}

data:
  # Any of `private`, `work`
  workspace: {{ $workspace }}

  # Git Setup.
  git:
    diffTool: nvim
    mergeTool: vscode

    configPath: ~/.config/git
    toolsPath: ~/.config/git/tools

    githooksCloneURL: https://github.com/gabyx/Githooks.git
    githooksCloneBranch: main

    {{- if contains $workspace "work" }}
    userEmail: gnuetzi@gmail.com
    userName: Gabriel Nützi
    {{- else }}
    userEmail: gnuetzi@gmail.com
    userName: Gabriel Nützi
    {{- end }}
